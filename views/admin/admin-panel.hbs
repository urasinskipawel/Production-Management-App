<header>
	<h1>Admin Panel</h1>
	<p>Add an employee and assign him a task</p>
	<a href='/'>Back to home page</a>

</header>

<h2>Worker list</h2>

<form action='/admin/panel' method='POST'>

	<div class='form-box'>
		<input name='firstname' type='text' placeholder='Type worker firstname' />
		<input name='lastname' type='text' placeholder='Type worker lastname' />
		<select class='machine' name='machine'>
			{{#each machinesList}}
				<option value='{{this.machine}}'>{{this.machine}}</option>
			{{/each}}
		</select>
		<button>Add worker</button>
	</div>

</form>

<table class='worker-table table'>
	<tr>
		<th>ID</th>
		<th>Worker</th>
		<th>Machine</th>
	</tr>

	{{#each workersList}}
		<tr>
			<td>{{showShortId this.id}}</td>
			<td>{{this.firstname}} {{this.lastname}}</td>
			<td>{{this.machine}}</td>
		</tr>
	{{/each}}
</table>

<h2>Tasks list</h2>

<form action='/admin/panel' method='POST'>

	<div class='form-box'>
		<input name='drawing' type='text' placeholder='Type number of drawing' />
		<input name='project' type='text' placeholder='Type number of project' />

		<button>Add Task</button>
	</div>

</form>

<table class='task-table table'>
	<tr>
		<th>Task ID</th>
		<th>Current task</th>
		<th>Project name</th>
		<th>Processing status</th>
		<th>Processing stage</th>
		<th>Worker</th>

	</tr>

	{{#each tasksList}}
		<tr>
			<td>{{showShortId this.id}}</td>
			<td>{{this.drawing}}</td>
			<td>{{this.project}}</td>
			<td>
				<select class='progress' name='progress'>
					{{#each ../progressStatuses}}
						<option value='{{this}}'>{{this}}</option>
					{{/each}}
				</select>
			</td>
			<td>
				<select class='steps' name='steps'>
					{{#each ../processSteps}}
						<option value='{{this}}'>{{this}}</option>
					{{/each}}
				</select>
			</td>
			<td>
				<select class='machine' name='machine'>
					{{#each ../workersList}}
						<option value='{{this.firstname}} {{this.lastname}}'>{{this.firstname}} {{this.lastname}}</option>
					{{/each}}
				</select>
			</td>

		</tr>
	{{/each}}

</table>